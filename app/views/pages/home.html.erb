<%= render 'layouts/banner' %>

<section class="container card-group">
  <div class="row">
    <% @artworks.each do |artwork| %>
      <div class="col-sm-4">
          <div class="card">
            <div class="card-block">
              <h3 class="card-title"><%= artwork.art_category %></h3>
              <p class="card-text"><%= artwork.size %></p>
              <p class="card-text"><%= artwork.photo_artwork %> <%= artwork.framed %></p>
              <%= link_to "artwork details", artwork_path(artwork), class: "btn btn-primary"  %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</section>


