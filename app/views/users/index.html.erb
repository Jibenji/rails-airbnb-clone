<section class="container card-group">
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-block">
        <%= link_to profile_path(user) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path user.photo_avatar, height: 300, width: 400,crop: :fill %>')">
            <h3 class="card-title"><%= user.first_name + " " + user.last_name %></h3>
          </div>
        </div>
      </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </section>

