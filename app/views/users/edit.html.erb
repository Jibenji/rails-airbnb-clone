<div class="form-container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @user, method: :patch do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true %>
        <%= f.input :last_name %>
        <%= f.input :photo_avatar, required: true %>
        <%= f.input :photo_avatar_cache, as: :hidden %>
        <%= f.input :photo_artists_banner, required: true %>
        <%= f.input :photo_artists_banner_cache, as: :hidden %>
        <%= f.input :phone %>
        <%= f.input :address %>
        <%= f.input :city %>
        <%= f.input :artist, as: :boolean %>
        <%= f.input :alias %>
        <%= f.input :bio, as: :text %>
        <%= f.input :description %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Save your Profile", class: "btn black-button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>



