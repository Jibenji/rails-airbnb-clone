<%= simple_form_for @user, method: :patch do |f| %>
<%= f.error_notification %>
  <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true %>
      <%= f.input :last_name %>
      <%= f.input :photo_avatar %>
      <%= f.input :photo_artists_banner %>
      <%= f.input :phone %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.check_box :artist, {}, "true", "false" %>
      <%= f.input :alias %>
      <%= f.input :bio %>
      <%= f.input :description %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Save your Profile" %>
  </div>
<% end %>

