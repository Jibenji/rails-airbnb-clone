<div class="navbar-wagon navbar-wagon-fixed">


  <div class="navbar-wagon-item">
  <% if account_signed_in? %>
    <div class="dropdown">
      <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
      <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
        <li><%=  %></li>
        <li><%= link_to "Edit Profile", profile_path %> </li>
      </ul>
    </div>
    <% end %>
  </div>


  <!-- Logo -->
  <div id="position-logo">
    <h1> <%= link_to "ARTSTARTS", root_path, class: "text-logo" %>  </h1>
  </div>

 <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Button (call-to-action) -->
    <% if account_signed_in? %>
     <%= link_to "Log out", destroy_account_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-button btn"  %>
