<section class="container card-group">
  <div class="row">
    <% @artworks.each do |artwork| %>
      <div class="col-sm-4">
          <div class="card">
            <div class="card-block">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path artwork.photo_artwork, height: 300, width: 400, crop: :fill %>')">
              <h3 class="card-title"><%= artwork.art_category %></h3>
              <p class="card-text"><%= artwork.size %></p>
              <p class="card-text"> <%= artwork.framed %></p>
              <p class="card-text"> <%= artwork.price %></p>
              <%= link_to "artwork details", artwork_path(artwork), class: "btn btn-primary"  %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</section>



